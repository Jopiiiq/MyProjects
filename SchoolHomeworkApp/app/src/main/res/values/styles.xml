<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Existing custom style -->
    <style name="Widget.Theme.Allamvizsga.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
    <!-- SmallRatingBar -->
    <style name="SmallRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">22dp</item>
        <item name="android:maxHeight">22dp</item>
    </style>
    <style name="RatingBar"
        parent="android:style/Widget.Material.RatingBar.Small">
        <item name="colorControlNormal">@color/primary_light</item>
        <item name="colorControlActivated">@color/primary_dark</item>
    </style>
    <style name="AppTheme1" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Alap színek -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Toolbar stílus -->
        <item name="toolbarStyle">@style/Widget.AppTheme.Toolbar</item>
    </style>

    <style name="Widget.AppTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
</resources>
